<!-- Obligatory novelty-sized login screen -->
<div class='novelty'>
  <% form_tag do %>
    <p>
      <%= label_tag :name %><br />
      <%= text_field_tag :name  %>
    </p>
  
    <p>
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </p>
  
    <%= submit_tag "Login" %>
  <% end %>
</div>